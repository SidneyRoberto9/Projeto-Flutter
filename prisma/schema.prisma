// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Movie {
  id          String @id @default(uuid()) @map("_id")
  image_url   String
  title       String
  genre       String
  age_group   String
  duration    Int
  rating      Float
  year        Int
  description String
}
